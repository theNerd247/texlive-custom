\ProvidesPackage{customrefs}

% custom reference styles
\usepackage{refstyle}
\newref{fig}{refcmd={Figure~\ref{#1}}}
\newref{tab}{refcmd={Table~\ref{#1}}}
\newref{gph}{refcmd={Graph~\ref{#1}}}
\newref{eq}{refcmd={Equation~\ref{#1}}}
\newref{al}{refcmd={Algorithm~\ref{#1}}}
\newref{ap}{refcmd={Appendix~\ref{#1}}}
